<Page x:Class="WpfApp4.Pages.FinalPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp4.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="FinalPage">
    <Page.Triggers>
        <EventTrigger RoutedEvent="Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation From="0" To="1" Duration="0:0:0:1" Storyboard.TargetProperty="Opacity">

                    </DoubleAnimation>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Page.Triggers>
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Images/background.png" Stretch="UniformToFill"/>
        </Grid.Background>


        <Label Content="Result" HorizontalAlignment="Left" Margin="308,50,0,0" VerticalAlignment="Top" Width="190" Height="62" FontFamily="Arial" FontSize="48" BorderBrush="Black" FontWeight="UltraBold" Foreground="White"/>
        <Button x:Name="gobackhome" Content="Start Again" Margin="570,349,64,60" Click="butsettings_Click"/>
        <DataGrid d:ItemsSource="{d:SampleData ItemCount=5}" Margin="40,140,224,140"/>
    </Grid>

</Page>
