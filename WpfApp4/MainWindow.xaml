        <Frame Name="MainFrame" Background ="DarkGray" NavigationUIVisibility="Hidden"/>
        <Rectangle RadiusX="10" RadiusY="10" Margin="40,33,624,366">
            <Rectangle.Fill>
                <ImageBrush ImageSource="/Images/FUHR_Logo.jpg" Stretch="UniformToFill"/>
            </Rectangle.Fill>
        </Rectangle>
        <Ellipse Name="closebtn" Fill="red" HorizontalAlignment="Left" Height="23" Margin="767,10,0,0" VerticalAlignment="Top" Width="23" MouseLeftButtonDown="closeApp" ToolTip="Close" Cursor="" MouseEnter="closebtn_MouseEnter" MouseLeave="closebtn_MouseLeave"/>

    </Grid>
    

</Window>
